{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for name, statuses in devices %}
                <div class="col-xl-4 col-md-6 col-12 g-3">
                    <div class="card">
                        <div class="card-header text-capitalize d-flex justify-content-between">
                            <b>{{ name }}</b>
                            <span class="badge badge-pill badge-info">{{ statuses ? statuses[0].lastValue ~ ' W' : null }}</span>
                        </div>
                        <div class="card-body">
                            {% for deviceStatus in statuses %}
                                {% if loop.first %}
                                    Status: <b>{{ deviceStatus.status.value }}</b>
                                    <br>Duration: <b>{{ deviceStatus.statusDuration|date("G:i:s") }}</b>
                                    <br>Last value: <b>{{ deviceStatus.lastValue }} W</b>
                                {% endif %}
                            {% else %}
                                <small>brak danych</small>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
