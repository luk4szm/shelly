{% for location in locations %}
    <div class="col-sm-6 col-lg-3">
        {% for device in temperatures|filter(v => v.device == location) %}
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="subheader">{{ location|trans }}</div>
                        <div class="ms-auto lh-1 text-secondary">from 8h</div>
                    </div>
                    <div class="d-flex align-items-baseline">
                        <div class="h1 mb-0 me-2">{{ device.value|number_format(1) }} Â°C</div>
                        <div class="me-auto">
                            <span class="text-green d-inline-flex align-items-center lh-1">
                                8%
                                <!-- Download SVG icon from http://tabler.io/icons/icon/trending-up -->
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                                     stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                     class="icon ms-1 icon-2">
                                    <path d="M3 17l6 -6l4 4l8 -8"></path>
                                    <path d="M14 7l7 0l0 7"></path>
                                </svg>
                            </span>
                        </div>
                    </div>
                </div>
                <div id="chart-visitors" class="position-relative"></div>
            </div>
        {% endfor %}
    </div>
{% endfor %}
