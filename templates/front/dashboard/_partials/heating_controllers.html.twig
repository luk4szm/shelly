<div class="card card-sm mt-2">
    <div class="card-body py-2">
        <div class="row">
            <div class="col">
                <div class="row align-items-center my-2">
                    <div class="col-auto">
                        <span class="{{ heatingPump.supply.active ? 'bg-success' : 'bg-light-lt' }} avatar"></span>
                    </div>
                    <div class="col">
                        <div class="fw-bolder fs-3">{{ heatingPump.supply.power }} W</div>
                        <div class="text-secondary text-capitalize fw-bold">
                            <a href="{{ path('app_front_device_daily', {'device': 'pompa-zasilanie'}) }}" class="text-secondary">
                                Zasilanie
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-auto">
                <div class="d-inline-grid fs-base" {{ heatingPump.supply.active ?: 'style="opacity: 0.3"' }}>
                    <div>
                        <span class="text-secondary">{% include '_icons/trening-up-icon.svg.twig' %}</span>
                        <span class="fw-bold">{{ heatingTemps.supply.value|number_format(1) }}</span>
                        <span class="text-secondary">째C</span>
                    </div>
                    <div>
                        <span class="text-secondary">{% include '_icons/u-turn-left-icon.svg.twig' %}</span>
                        <span class="fw-bold">{{ heatingTemps.recirculation.value|number_format(1) }}</span>
                        <span class="text-secondary">째C</span>
                    </div>
                    <div>
                        <span class="text-secondary">{% include '_icons/trening-down-icon.svg.twig' %}</span>
                        <span class="fw-bold">{{ heatingTemps.return.value|number_format(1) }}</span>
                        <span class="text-secondary">째C</span>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="row align-items-center my-2">
                    <div class="col text-end">
                        <div class="fw-bolder fs-3">{{heatingPump.return.power }} W</div>
                        <div class="text-secondary text-capitalize fw-bold">
                            <a href="{{ path('app_front_device_daily', {'device': 'pompa-powrot'}) }}" class="text-secondary">
                                Powr처t
                            </a>
                        </div>
                    </div>
                    <div class="col-auto">
                        <span class="{{ heatingPump.return.active ? 'bg-success' : 'bg-light-lt' }} avatar"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 mt-2">
                <button type="button" class="btn btn-6 btn-azure w-100" data-bs-toggle="modal" data-bs-target="#heatingControllerModal">
                    <span>Sterowanie</span>
                </button>
            </div>
        </div>
    </div>
</div>
