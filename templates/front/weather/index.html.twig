{% extends 'base.html.twig' %}

{% block pageTitle %}Jakość powietrza i prognoza pogody{% endblock %}
{% block pagePreTitle %}{% endblock %}

{% block pageTitleActions %}
    <div class="d-flex">
        <div class="input-group ms-3">
            <button class="btn" type="button" id="prev-day-btn" aria-label="Poprzedni dzień">
                &#8592;
            </button>
            <input type="date" class="form-control" id="wheater_date" value="{{ date|default("now")|date("Y-m-d") }}" min="2025-10-16"
                   max="{{ "now"|date("Y-m-d") }}">
            <button class="btn" type="button" id="next-day-btn" aria-label="Następny dzień">
                &#8594;
            </button>
        </div>
    </div>
{% endblock %}

{% block pageBody %}
    {% set isToday = (date|date('Y-m-d')) == ('now'|date('Y-m-d')) %}
    <div data-role-date="{{ date }}"></div>
    <div class="container-xl">
        <div class="row row-cards" id="air_quality_data_cards">
            <div class="col-md col-12">
                <div class="card">
                    {% set temperatureExtraClass = airQuality.actual.temperature >= 30 ? 'bg-danger-lt' : (
                        airQuality.actual.temperature >= 25 ? 'bg-warning-lt' : (
                            airQuality.actual.temperature <= 0 ? 'bg-info-lt' : ''
                        )
                    ) %}
                    <div class="card-body px-xl-3 {{ temperatureExtraClass }}">
                        <div class="row">
                            <div class="col">
                                <div class="d-flex align-items-center">
                                    <div class="subheader">
                                        Temperature
                                    </div>
                                </div>
                                <div class="d-flex align-items-baseline justify-content-between">
                                    <div class="h1 mb-0 text-nowrap">
                                        {{ isToday ? airQuality.actual.temperature : airQuality.daily.temperature|number_format(2) }}
                                        <small>°C</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="d-inline align-items-baseline text-end">
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.daily.temperature_min|number_format(2) }} <small>°C</small></div>
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.daily.temperature|number_format(2) }} <small>°C</small></div>
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.daily.temperature_max|number_format(2) }} <small>°C</small></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md col-12">
                <div class="card">
                    {% set airPressureExtraClass = airQuality.actual.seaLevelPressure >= 1030 ? 'bg-danger-lt' : (
                        airQuality.actual.seaLevelPressure >= 1020 ? 'bg-warning-lt' : (
                            airQuality.actual.seaLevelPressure <= 1000 ? 'bg-info-lt' : ''
                        )
                    ) %}
                    <div class="card-body px-xl-3 {{ airPressureExtraClass }}">
                        <div class="row">
                            <div class="col">
                                <div class="d-flex align-items-center">
                                    <div class="subheader">
                                        Pressure
                                    </div>
                                </div>
                                <div class="d-flex align-items-baseline justify-content-between">
                                    <div class="h1 mb-0 text-nowrap">
                                        {{ isToday ? airQuality.actual.seaLevelPressure|number_format(1, '.', '') : airQuality.daily.seaLevelPressure|number_format(1, '.', '') }}
                                        <small>kPa</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="d-inline align-items-baseline text-end">
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.daily.seaLevelPressure_min|number_format(1, '.', '') }} <small>kPa</small></div>
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.daily.seaLevelPressure|number_format(1, '.', '') }} <small>kPa</small></div>
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.daily.seaLevelPressure_max|number_format(1, '.', '') }} <small>kPa</small></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md col-12">
                <div class="card">
                    <div class="card-body px-xl-3">
                        <div class="row">
                            <div class="col">
                                <div class="d-flex align-items-center">
                                    <div class="subheader">
                                        Humidity
                                    </div>
                                </div>
                                <div class="d-flex align-items-baseline justify-content-between">
                                    <div class="h1 mb-0 text-nowrap">
                                        {{ isToday ? airQuality.actual.humidity|number_format(1) : airQuality.daily.humidity|number_format(1) }}
                                        <small>%</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="d-inline align-items-baseline text-end">
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.daily.humidity_min|number_format(1) }} <small>%</small></div>
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.daily.humidity|number_format(1) }} <small>%</small></div>
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.daily.humidity_max|number_format(1) }} <small>%</small></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md col-12">
                <div class="card">
                    {% set airQuality25ExtraClass = airQuality.actual.pm25 >= 15 ? 'bg-danger-lt' : (
                        airQuality.actual.pm25 >= 5 ? 'bg-warning-lt' : ''
                    ) %}
                    <div class="card-body px-xl-3 {{ airQuality25ExtraClass }}">
                        <div class="row">
                            <div class="col">
                                <div class="d-flex align-items-center">
                                    <div class="subheader">
                                        PM2.5
                                    </div>
                                </div>
                                <div class="d-flex align-items-baseline justify-content-between">
                                    <div class="h1 mb-0 text-nowrap">
                                        {{ isToday ? airQuality.actual.pm25 : airQuality.daily.pm25|number_format(2) }}
                                        <small>µg/m³</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="d-inline align-items-baseline text-end">
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.daily.pm25_min|number_format(2) }} <small>µg/m³</small></div>
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.daily.pm25|number_format(2) }} <small>µg/m³</small></div>
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.daily.pm25_max|number_format(2) }} <small>µg/m³</small></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md col-12">
                <div class="card">
                    {% set airQuality10ExtraClass = airQuality.actual.pm10 >= 45 ? 'bg-danger-lt' : (
                        airQuality.actual.pm10 >= 15 ? 'bg-warning-lt' : ''
                    ) %}
                    <div class="card-body px-xl-3 {{ airQuality10ExtraClass }}">
                        <div class="row">
                            <div class="col">
                                <div class="d-flex align-items-center">
                                    <div class="subheader">
                                        PM10
                                    </div>
                                </div>
                                <div class="d-flex align-items-baseline justify-content-between">
                                    <div class="h1 mb-0 text-nowrap">
                                        {{ isToday ? airQuality.actual.pm10 :  airQuality.daily.pm10|number_format(2) }}
                                        <small>µg/m³</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="d-inline align-items-baseline text-end">
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.daily.pm10_min|number_format(2) }} <small>µg/m³</small></div>
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.daily.pm10|number_format(2) }} <small>µg/m³</small></div>
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.daily.pm10_max|number_format(2) }} <small>µg/m³</small></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row row-cards mt-1">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div id="chart-air-quality" class="position-relative" style="min-height: 355px"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row row-cards mt-1">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div id="chart-weather" class="position-relative" style="min-height: 300px"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block pagejs %}
    <script src="{{ asset('js/weather/air_quality.js') }}"></script>
