{% extends 'base.html.twig' %}

{% block pageTitle %}Jakość powietrza i prognoza pogody{% endblock %}
{% block pagePreTitle %}{% endblock %}

{% block pageTitleActions %}
    <div class="d-flex">
        <div class="input-group ms-3">
            <button class="btn" type="button" id="prev-day-btn" aria-label="Poprzedni dzień">
                &#8592;
            </button>
            <input type="date" class="form-control" id="wheater_date" value="{{ date|default("now")|date("Y-m-d") }}" min="2025-03-12"
                   max="{{ "now"|date("Y-m-d") }}">
            <button class="btn" type="button" id="next-day-btn" aria-label="Następny dzień">
                &#8594;
            </button>
        </div>
    </div>
{% endblock %}

{% block pageBody %}
    <div class="container-xl">
        <div class="row row-cards">
            <div class="col-md col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="subheader">
                                Temperature
                            </div>
                        </div>
                        <div class="d-flex align-items-baseline">
                            <div class="h1 mb-0 me-2">{{ airQuality.actual.temperature }} <small>°C</small></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="subheader">
                                Pressure
                            </div>
                        </div>
                        <div class="d-flex align-items-baseline">
                            <div class="h1 mb-0 me-2">{{ airQuality.actual.pressure }} <small>kPa</small></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="subheader">
                                Humidity
                            </div>
                        </div>
                        <div class="d-flex align-items-baseline justify-content-between">
                            <div class="h1 mb-0 me-2">{{ airQuality.actual.humidity|number_format(1) }} <small>%</small></div>
                            <div class="h3 mb-0 ms-0 text-muted">x̄ {{ airQuality.actual.humidity|number_format(1) }} <small>%</small></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="subheader">
                                PM2.5
                            </div>
                        </div>
                        <div class="d-flex align-items-baseline">
                            <div class="h1 mb-0 me-2">{{ airQuality.actual.pm25 }} <small>µg/m³</small></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="subheader">
                                PM10
                            </div>
                        </div>
                        <div class="d-flex align-items-baseline">
                            <div class="h1 mb-0 me-2">{{ airQuality.actual.pm10 }} <small>µg/m³</small></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row row-cards mt-1">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div id="chart-air-quality" class="position-relative" style="min-height: 355px"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row row-cards mt-1">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div id="chart-weather" class="position-relative" style="min-height: 300px"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block pagejs %}
    <script src="{{ asset('js/weather/air_quality.js') }}"></script>
    <script src="{{ asset('js/weather/weather.js') }}"></script>
{#    <script src="{{ asset('js/weather/temperature.js') }}"></script>#}
{#    <script src="{{ asset('js/weather/humidity.js') }}"></script>#}
{#    <script src="{{ asset('js/weather/pressure.js') }}"></script>#}
{% endblock %}
