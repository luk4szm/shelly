{% extends 'base.html.twig' %}

{% block pageTitle %}Jakość powietrza i prognoza pogody{% endblock %}
{% block pagePreTitle %}{% endblock %}

{% block pageTitleActions %}
    <div class="d-inline-flex">
        <div class="btn-group me-3" role="group">
            <input type="radio" class="btn-check" name="btn-radio-basic" id="btn-radio-basic-1" autocomplete="off" {% if app.current_route == 'app_weather_daily' %}checked="checked"{% endif %}">
            <label for="btn-radio-basic-1" type="button" class="btn" onclick="location.href='{{ path('app_weather_daily') }}'">dzień</label>
            <input type="radio" class="btn-check" name="btn-radio-basic" id="btn-radio-basic-2" autocomplete="off" {% if app.current_route == 'app_weather_monthly' %}checked="checked"{% endif %}">
            <label for="btn-radio-basic-2" type="button" class="btn" onclick="location.href='{{ path('app_weather_monthly') }}'">miesiąc</label>
        </div>
        <div class="input-group">
            <button class="btn" type="button" id="prev-day-btn" aria-label="Poprzedni dzień">&#8592;</button>
            <input type="month" class="form-control" id="wheater_date" value="{{ app.request.query.get('date') ? app.request.query.get('date')|date('Y-m') : "now"|date("Y-m") }}" min="2025-10" max="{{ "now"|date("Y-m") }}">
            <button class="btn" type="button" id="next-day-btn" aria-label="Następny dzień">&#8594;</button>
        </div>
    </div>
{% endblock %}

{% block pageBody %}
    {% set isToday = (date|date('Y-m-d')) == ('now'|date('Y-m-d')) %}
    <div data-role-date="{{ date }}"></div>
    <div class="container-xl">
        <div class="row row-cards" id="air_quality_data_cards">
            <div class="col-md col-12">
                <div class="card">
                    {% set temperatureExtraClass = airQuality.monthly.temperature >= 30 ? 'bg-danger-lt' : (
                        airQuality.monthly.temperature >= 25 ? 'bg-warning-lt' : (
                            airQuality.monthly.temperature <= 0 ? 'bg-info-lt' : ''
                        )
                    ) %}
                    <div class="card-body px-xl-3 {{ temperatureExtraClass }}">
                        <div class="row">
                            <div class="col">
                                <div class="d-flex align-items-center">
                                    <div class="subheader">
                                        Temperature
                                    </div>
                                </div>
                                <div class="d-flex align-items-baseline justify-content-between">
                                    <div class="h1 mb-0 text-nowrap">
                                        {{ airQuality.monthly.temperature|number_format(2) }}
                                        <small>°C</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="d-inline align-items-baseline text-end">
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.monthly.temperature_min|number_format(2) }} <small>°C</small></div>
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.monthly.temperature|number_format(2) }} <small>°C</small></div>
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.monthly.temperature_max|number_format(2) }} <small>°C</small></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md col-12">
                <div class="card">
                    {% set airPressureExtraClass = airQuality.monthly.seaLevelPressure >= 1030 ? 'bg-danger-lt' : (
                        airQuality.monthly.seaLevelPressure >= 1020 ? 'bg-warning-lt' : (
                            airQuality.monthly.seaLevelPressure <= 1000 ? 'bg-info-lt' : ''
                        )
                    ) %}
                    <div class="card-body px-xl-3 {{ airPressureExtraClass }}">
                        <div class="row">
                            <div class="col">
                                <div class="d-flex align-items-center">
                                    <div class="subheader">
                                        Pressure
                                    </div>
                                </div>
                                <div class="d-flex align-items-baseline justify-content-between">
                                    <div class="h1 mb-0 text-nowrap">
                                        {{ airQuality.monthly.seaLevelPressure|number_format(1, '.', '') }}
                                        <small>kPa</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="d-inline align-items-baseline text-end">
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.monthly.seaLevelPressure_min|number_format(1, '.', '') }} <small>kPa</small></div>
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.monthly.seaLevelPressure|number_format(1, '.', '') }} <small>kPa</small></div>
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.monthly.seaLevelPressure_max|number_format(1, '.', '') }} <small>kPa</small></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md col-12">
                <div class="card">
                    <div class="card-body px-xl-3">
                        <div class="row">
                            <div class="col">
                                <div class="d-flex align-items-center">
                                    <div class="subheader">
                                        Humidity
                                    </div>
                                </div>
                                <div class="d-flex align-items-baseline justify-content-between">
                                    <div class="h1 mb-0 text-nowrap">
                                        {{ airQuality.monthly.humidity|number_format(1) }}
                                        <small>%</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="d-inline align-items-baseline text-end">
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.monthly.humidity_min|number_format(1) }} <small>%</small></div>
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.monthly.humidity|number_format(1) }} <small>%</small></div>
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.monthly.humidity_max|number_format(1) }} <small>%</small></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md col-12">
                <div class="card">
                    {% set airQuality25ExtraClass = airQuality.monthly.pm25 >= 15 ? 'bg-danger-lt' : (
                        airQuality.monthly.pm25 >= 5 ? 'bg-warning-lt' : ''
                    ) %}
                    <div class="card-body px-xl-3 {{ airQuality25ExtraClass }}">
                        <div class="row">
                            <div class="col">
                                <div class="d-flex align-items-center">
                                    <div class="subheader">
                                        PM2.5
                                    </div>
                                </div>
                                <div class="d-flex align-items-baseline justify-content-between">
                                    <div class="h1 mb-0 text-nowrap">
                                        {{ airQuality.monthly.pm25|number_format(2) }}
                                        <small>µg/m³</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="d-inline align-items-baseline text-end">
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.monthly.pm25_min|number_format(2) }} <small>µg/m³</small></div>
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.monthly.pm25|number_format(2) }} <small>µg/m³</small></div>
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.monthly.pm25_max|number_format(2) }} <small>µg/m³</small></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md col-12">
                <div class="card">
                    {% set airQuality10ExtraClass = airQuality.monthly.pm10 >= 45 ? 'bg-danger-lt' : (
                        airQuality.monthly.pm10 >= 15 ? 'bg-warning-lt' : ''
                    ) %}
                    <div class="card-body px-xl-3 {{ airQuality10ExtraClass }}">
                        <div class="row">
                            <div class="col">
                                <div class="d-flex align-items-center">
                                    <div class="subheader">
                                        PM10
                                    </div>
                                </div>
                                <div class="d-flex align-items-baseline justify-content-between">
                                    <div class="h1 mb-0 text-nowrap">
                                        {{ airQuality.monthly.pm10|number_format(2) }}
                                        <small>µg/m³</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="d-inline align-items-baseline text-end">
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.monthly.pm10_min|number_format(2) }} <small>µg/m³</small></div>
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.monthly.pm10|number_format(2) }} <small>µg/m³</small></div>
                                    <div class="h4 mb-0 text-nowrap text-muted lh-sm">{{ airQuality.monthly.pm10_max|number_format(2) }} <small>µg/m³</small></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Wykresy świeczkowe dla miesiąca #}
        <div class="row row-cards mt-1">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div id="chart-air-quality" class="position-relative" style="min-height: 355px"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row row-cards mt-1">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div id="chart-weather-temperature" class="position-relative" style="min-height: 300px"></div>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div id="chart-weather-pressure" class="position-relative" style="min-height: 300px"></div>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div id="chart-weather-humidity" class="position-relative" style="min-height: 300px"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block pagejs %}
    <script src="{{ asset('js/weather/air_quality_monthly.js') }}"></script>
{% endblock %}
