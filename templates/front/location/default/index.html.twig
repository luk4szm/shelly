{% extends 'base.html.twig' %}

{% block pageTitle %}{{ location|trans }}{% endblock %}
{% block pagePreTitle %}Location{% endblock %}

{% block pageTitleActions %}
    <div class="d-inline-flex">
        <div class="btn-group me-3" role="group">
            <input type="radio" class="btn-check" name="btn-radio-basic" id="btn-radio-basic-1" autocomplete="off" {{ app.current_route ends with 'daily' ? 'checked="checked"' }}>
            <label for="btn-radio-basic-1" type="button" class="btn" onclick="location.href='{{ path('app_front_default_location_daily', {'location': location}) }}'">dzień</label>
            <input type="radio" class="btn-check" name="btn-radio-basic" id="btn-radio-basic-2" autocomplete="off" {{ app.current_route ends with 'monthly' ? 'checked="checked"' }}>
            <label for="btn-radio-basic-2" type="button" class="btn" onclick="location.href='{{ path('app_front_default_location_monthly', {'location': location}) }}'">miesiąc</label>
{#            <input type="radio" class="btn-check" name="btn-radio-basic" id="btn-radio-basic-3" autocomplete="off"> #}
{#            <label for="btn-radio-basic-3" type="button" class="btn" onclick="location.href='{{ path('app_front_device_yearly', {'device': device.name}) }}'">rok</label> #}
        </div>
        {% block buttons %}{% endblock %}
    </div>
{% endblock %}
