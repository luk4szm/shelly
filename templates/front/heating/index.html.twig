{% extends 'base.html.twig' %}

{% block pageTitle %}Heating{% endblock %}

{% block pageTitleActions %}
    <div class="input-group">
        <button class="btn" type="button" id="prev-day-btn" aria-label="Poprzedni dzień">
            &#8592;
        </button>

        <input type="date" class="form-control" id="heating_date" value="{{ date|default("now")|date("Y-m-d") }}" min="2025-03-12" max="{{ "now"|date("Y-m-d") }}">

        <button class="btn" type="button" id="next-day-btn" aria-label="Następny dzień">
            &#8594;
        </button>
    </div>
{% endblock %}

{% block pageBody %}
    <div class="container-xl">
        <div class="row row-deck row-cards">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div id="chart-temperature" class="position-relative"></div>
                        <div class="small text-muted mt-2 d-flex justify-content-center gap-3 flex-wrap">
                            <span><span style="display:inline-block;width:12px;height:12px;background: rgba(220,53,69);border-radius:3px;"></span> piec </span>
                            <span><span style="display:inline-block;width:12px;height:12px;background: rgba(253,126,20);border-radius:3px;"></span> kominek </span>
                            <span><span style="display:inline-block;width:12px;height:12px;background: rgba(25,135,84);border-radius:3px;"></span> solary </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block pagejs %}
    <script src="{{ asset('js/heating_chart.js') }}"></script>
{% endblock %}
