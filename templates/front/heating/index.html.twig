{% extends 'base.html.twig' %}

{% block pageTitle %}Heating{% endblock %}

{% block pageTitleActions %}
    <div class="input-icon">
        <span class="input-icon-addon">
            {{ include('_icons/calendar-icon.svg.twig') }}
        </span>
        <input type="date" class="form-control" id="heating_date" value="{{ "now"|date("Y-m-d") }}" max="{{ "now"|date("Y-m-d") }}">
    </div>
{% endblock %}

{% block pageBody %}
    <div class="container-xl">
        <div class="row row-deck row-cards">
            <div class="col-12">
                <div class="card">
                    <div class="card-body" style="min-height: 432px;">
                        <div id="chart-temperature" class="position-relative"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block pagejs %}
    <script src="{{ asset('js/heating_chart.js') }}"></script>
{% endblock %}
