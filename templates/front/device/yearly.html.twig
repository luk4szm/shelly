{% extends 'base.html.twig' %}

{% block pageTitle %}{{ device.name|capitalize }}{% endblock %}
{% block pagePreTitle %}Devices{% endblock %}

{% block pageTitleActions %}
    <div class="d-inline-flex">
        <div class="btn-group me-3" role="group">
            <input type="radio" class="btn-check" name="btn-radio-basic" id="btn-radio-basic-1" autocomplete="off">
            <label for="btn-radio-basic-1" type="button" class="btn" onclick="location.href='{{ path('app_front_device_daily', {'device': device.name}) }}'">dzień</label>
            <input type="radio" class="btn-check" name="btn-radio-basic" id="btn-radio-basic-2" autocomplete="off">
            <label for="btn-radio-basic-2" type="button" class="btn" onclick="location.href='{{ path('app_front_device_monthly', {'device': device.name}) }}'">miesiąc</label>
            <input type="radio" class="btn-check" name="btn-radio-basic" id="btn-radio-basic-3" autocomplete="off" checked="checked">
            <label for="btn-radio-basic-3" type="button" class="btn" onclick="location.href='{{ path('app_front_device_yearly', {'device': device.name}) }}'">rok</label>
        </div>
        <div class="input-group">
            <button class="btn" type="button" id="prev-year-btn" aria-label="Poprzedni rok">&#8592;</button>
            <input type="number" class="form-control" id="heating_date" value="{{ device.year }}" min="2023" max="{{ "now"|date("Y") }}">
            <button class="btn" type="button" id="next-year-btn" aria-label="Następny rok">&#8594;</button>
        </div>
    </div>
{% endblock %}

{% block pageBody %}
    <div class="container-xl">
        <div class="row row-cards">
            <div class="col-12 col-md-3">
                <div class="card" id="device_stats">
                    <div class="card-header">
                        <h3 class="card-title">Statystyki roczne</h3>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            {% if device.yearlyStats is not null %}
                                <dt class="col-7 fw-light">Rok:</dt>
                                <dd class="col-5 fw-bold">{{ device.year }}</dd>
                                <dt class="col-7 fw-light">Uruchomień:</dt>
                                <dd class="col-5 fw-bold">{{ device.yearlyStats.inclusions|default(0) }}</dd>
                                <dt class="col-7 fw-light">Energia:</dt>
                                <dd class="col-5 fw-bold">{{ device.yearlyStats.energy|default(0)|format_energy }}</dd>
                                {% if device.name == 'piec' %}
                                    <dt class="col-7 fw-light">Użycie gazu:</dt>
                                    <dd class="col-5 fw-bold">{{ device.yearlyStats.gas|default(0)|format_gas_consume }}</dd>
                                {% endif %}
                                <dt class="col-7 fw-light">Czas pracy:</dt>
                                <dd class="col-5 fw-bold">{{ device.yearlyStats.time|default(0)|readableDurationTime }}</dd>
                            {% else %}
                                <div class="text-muted">Brak danych rocznych.</div>
                            {% endif %}
                        </dl>
                    </div>
                </div>
            </div>
            <div class="col-md-9 col-12">
                <div class="card">
                    <div class="card-body" style="min-height: 432px;">
                        {% set yearly_chart_data = [] %}
                        {% if device.monthlyStats %}
                            {% for stat in device.monthlyStats %}
                                {% set yearly_chart_data = yearly_chart_data|merge([{'month': stat.month, 'energy': stat.energy|default(0), 'time': stat.time|default(0), 'inclusions': stat.inclusions|default(0), 'gas': stat.gas|default(0)}]) %}
                            {% endfor %}
                        {% endif %}
                        <div id="chart-power" class="position-relative" data-yearly-data="{{ yearly_chart_data is not empty ? yearly_chart_data|json_encode|e('html_attr') : '' }}" data-device-name="{{ device.name }}">
                            <div class="chart-loader position-absolute top-50 start-50 translate-middle" style="display: none; z-index: 10;">
                                <div class="spinner-border" role="status"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3" id="device_stats">
                    <div class="card-header">
                        <h3 class="card-title">Zestawienie roczne</h3>
                    </div>
                    <div class="card-body">
                        {% if device.monthlyStats is not empty %}
                            {% set maxDuration = 0 %}
                            {% for row in device.monthlyStats %}
                                {% if row.time > maxDuration %}
                                    {% set maxDuration = row.time %}
                                {% endif %}
                            {% endfor %}
                            <table class="table table-sm table-striped lh-1">
                                <thead>
                                <tr>
                                    <th scope="col"></th>
                                    <th scope="col" class="text-center">Miesiąc</th>
                                    <th scope="col" class="text-center d-none d-md-block">Uruchomień</th>
                                    <th scope="col" class="text-end">Energia</th>
                                    {% if device.name == 'piec' %}
                                        <th scope="col" class="text-end">Użycie gazu</th>
                                    {% endif %}
                                    <th scope="col" class="text-end">Czas pracy</th>
                                    <th scope="col" class="d-none d-mb-block">Czas pracy</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for row in device.monthlyStats %}
                                    <tr{{ row.totalActiveTime < 60 ? ' class="text-muted"' }}>
                                        <td class="text-muted">{{ loop.index }}</td>
                                        <td class="text-center">{{ row.month }}</td>
                                        <td class="text-center d-none d-md-block">{{ row.inclusions }}</td>
                                        <td class="text-end text-nowrap">{{ row.energy ? row.energy|format_energy : '0 Wh' }}</td>
                                        {% if device.name == 'piec' %}
                                            <td class="text-end text-nowrap">
                                                {{ row.gas|format_gas_consume }}
                                            </td>
                                        {% endif %}
                                        <td class="text-end">{{ row.time ? row.time|readableDurationTime : '' }}</td>
                                        <td class="ps-3 w-25">
                                            {% if maxDuration > 0 %}
                                                {% set widthPercentage = (row.time / maxDuration) * 100 %}
                                            {% else %}
                                                {% set widthPercentage = 0 %}
                                            {% endif %}
                                            <div class="progress progress-xs">
                                                <div class="progress-bar bg-primary" style="width: {{ widthPercentage|round(1) }}%"></div>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <span class="text-muted">Brak danych</span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block pagejs %}
    <script src="{{ asset('js/device/yearly_power_chart.js') }}"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const heatingDate = document.getElementById('heating_date');
            const prevBtn = document.getElementById('prev-year-btn');
            const nextBtn = document.getElementById('next-year-btn');

            function updateUrl() {
                const year = heatingDate.value;
                const url = new URL(window.location.href);
                url.searchParams.set('date', year);
                window.location.href = url.toString();
            }

            heatingDate.addEventListener('change', updateUrl);

            prevBtn.addEventListener('click', function() {
                heatingDate.stepDown();
                updateUrl();
            });

            nextBtn.addEventListener('click', function() {
                heatingDate.stepUp();
                updateUrl();
            });
        });
    </script>
{% endblock %}
