{% extends 'base.html.twig' %}

{% block pagePreTitle %}Controllers{% endblock %}

{% block pageTitleActions %}{% endblock %}

{% block customCss %}
    <style>
       /* Ustawienia dla przycisku z funkcją przytrzymania */
       .long-press-btn {
          position: relative; /* Niezbędne do pozycjonowania pseudo-elementu ::before */
          overflow: hidden; /* Ukrywa pasek postępu, gdy wychodzi poza przycisk */
          -webkit-tap-highlight-color: transparent; /* Usuwa domyślne podświetlenie na urządzeniach mobilnych */
       }

       /* Pasek postępu (pseudo-element) */
       .long-press-btn::before {
          content: '';
          position: absolute;
          top: 0;
          left: 0;
          width: 0; /* Początkowa szerokość to 0 */
          height: 100%;
          background-color: rgba(0, 0, 0, 0.2); /* Półprzezroczysty, ciemniejszy kolor jako wskaźnik */
          transition: width 350ms linear; /* Płynna animacja szerokości przez 0,5 sekundy */
       }

       /* Stan, w którym przycisk jest przytrzymywany */
       .long-press-btn.is-holding::before {
          width: 100%; /* Wypełnij cały przycisk */
       }

       /* Upewniamy się, że tekst jest zawsze na wierzchu */
       .long-press-btn span {
          position: relative;
          z-index: 1;
       }

       /* Styl dla span, gdy trwa ładowanie statusu */
       span[data-role="check_status"].is-loading {
          /* Prosty przykład użycia animacji spinnera z Bootstrapa, jeśli go używasz */
          /* Możesz tu wstawić własny GIF lub animację CSS */
          background-color: #f0f0f0 !important; /* Szare tło jako wskaźnik */
          animation: spin 1s linear infinite;
       }

       /* Styl dla statusu "online" */
       span[data-role="check_status"].is-online {
          background-color: #2fb344 !important; /* Zielony */
       }

       /* Styl dla statusu "offline" lub błędu */
       span[data-role="check_status"].is-offline {
          background-color: #d63939 !important; /* Czerwony */
       }

       /* Prosta animacja obrotu dla spinnera */
       @keyframes spin {
          0% {
             transform: rotate(0deg);
          }
          100% {
             transform: rotate(360deg);
          }
       }
    </style>
{% endblock %}

